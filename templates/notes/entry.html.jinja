{% extends "_layout.html" %}
{% set metatitle = "Note" %}
{% set metadescription = "Note" %}
{% set canonicalUrl = entry.url %}

{% block postHead %}
    <link rel="index" href="{{ site_url }}/notes">
{% endblock %}

{% block content %}
    <article>
        <header>
            <small>Posted on <time datetime="{{ entry.date_created.strftime('%F') }}">{{ entry.date_created.strftime('%B %-d, %Y') }}</time></small>
        </header>
        {{ entry.body|render|safe }}
    </article>
{% endblock %}
