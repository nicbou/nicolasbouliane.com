{% extends "_layout.html" %}
{% set metatitle = "Projects" %}
{% set metadescription = "Things I have built over the years." %}
{% set canonicalUrl = "/projects" %}

{% block content %}
    <header>
        <h1>Projects</h1>
    </header>
    <h2>Active projects</h2>
    <ul class="entry-list">
        {% for entry in get_entries('projects', filter_by=is_golden, sort_by='date_created', reverse=True) %}
            <li>
                <time datetime="{{ entry.date_created.strftime('%F') }}">{{ entry.date_created.strftime('%Y') }}</time>
                <h2><a rel="bookmark" href="{{ entry.url }}">{{ entry.title }}</a></h2>
                <p>{{ entry.description }}</p>
            </li>
        {% endfor %}
    </ul>
    <h2>Everything else</h2>
    <ul class="entry-list">
        {% for entry in get_entries('projects', filter_by=is_not_golden, sort_by='date_created', reverse=True) %}
            <li>
                <time datetime="{{ entry.date_created.strftime('%F') }}">{{ entry.date_created.strftime('%Y') }}</time>
                <h2><a rel="bookmark" href="{{ entry.url }}">{{ entry.title }}</a></h2>
                <p>{{ entry.description }}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}